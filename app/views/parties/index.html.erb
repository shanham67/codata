<h1>Listing parties</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Begin date</th>
    <th>End date</th>
    <th>Active party</th>
    <th>Superceded date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parties.each do |party| %>
  <tr>
    <td><%= party.display_name %></td>
    <td><%= party.begin_date %></td>
    <td><%= party.end_date %></td>
    <td><%= party.active_party_id %></td>
    <td><%= party.superceded_date %></td>
    <td><%= link_to 'Show', party %></td>
    <td><%= link_to 'Edit', edit_party_path(party) %></td>
    <td><%= link_to 'Delete', party, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

